@model IEnumerable<HOA.Models.Residents>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "HOA - Residents";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Residents - HOA Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Page Header -->
    <header class="page-header">
        <h1>Residents Management</h1>
        <p>Manage all residents of your HOA community</p>
    </header>

    <!-- Main Content -->
    <div class="container my-4">

        <!-- Search and Add Resident -->
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <div class="input-group w-50">
                <input type="text" class="form-control" placeholder="Search residents...">
                <button class="btn btn-outline-secondary" type="button">Search</button>
            </div>
            <button class="btn btn-primary mt-2 mt-md-0">
                <i class="bi bi-person-plus"></i> Add Resident
            </button>
        </div>

        <!-- Residents Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Apartment</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Apartment)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                @{
                                    var badgeClass = item.Status switch
                                    {
                                        "Active" => "bg-success",
                                        "Inactive" => "bg-secondary",
                                        _ => "bg-secondary"  // Default color for any other status
                                    };
                                }
                                <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.Status)</span>
                            </td> 
                            <!-- status: In Progress, Completed, Delayed -->
                            <td class="text-center">
                                <button class="btn btn-sm btn-warning"><i class="bi bi-pencil-square"></i> Edit</button>
                                <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Delete</button>
                            </td>
                            <!-- to do - modify status in functie de status -->
                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>
    <!-- Bootstrap JS (Optional if you're not using interactive elements yet) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

